@model Movie
<form method="post">
    <div class="card shadow border-0 mt-4 mb-4">
        <div class="card-header bg-primary bg-gradient text-light py-4">
            <div class="row">
                <div class="col-12 text-center">
                    <h3 class="text-white text-uppercase">@Model.Title</h3>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="py-3">
                <div class="row">
                    <div class="col-6 col-md-3 offset-lg-1 pb-1">
                        <a asp-action="Index" class="btn btn-outline-warning bg-gradient mb-5 fw-semibold btn-sm text-uppercase d-flex align-items-center justify-content-center">
                            <i class="bi bi-house me-2"></i>
                            <span>Back to Home</span>
                        </a>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 col-lg-3 offset-lg-1 text-center mb-3">
                        <img src="@Model.ImageUrl" width="100%" class="rounded" alt="Movie Poster" />
                    </div>
                    <div class="col-12 col-lg-6 offset-lg-1">
                        <div class="col-12 col-md-6 pb-4">
                            <span class="badge bg-warning mb-2">@Model.Category.Name</span>
                        </div>


                        <div class="row ps-2 mb-2">
                            <!-- Added margin-bottom for spacing -->
                            <h6 class="text-dark text-opacity-50">Director: @Model.Director</h6>
                        </div>
                        <div class="row ps-2">
                            <h6 class="text-dark text-opacity-50 pb-2">DVD-Price: @Model.DvdPrice.ToString("c")</h6>
                        </div>
                        <div class="row ps-2">
                            <h6 class="text-dark text-opacity-50 pb-2">Blu-ray Price: @Model.BlurayPrice.ToString("c")</h6>
                        </div>
                        <div class="row text-center ps-2">
                            <div class="col-3 col-lg-2 bg-white border-bottom p-1">
                                <div class="text-dark text-opacity-50 fw-semibold">Quantity</div>
                            </div>
                            <div class="col-3 col-lg-2 bg-white border-bottom p-1">
                                <div class="text-dark text-opacity-50 fw-semibold">Pack-2</div>
                            </div>
                            <div class="col-3 col-lg-2 bg-white border-bottom p-1">
                                <div class="text-dark text-opacity-50 fw-semibold">Pack-2(BR)</div>
                            </div>
                            <div class="col-3 col-lg-2 bg-white border-bottom p-1">
                                <div class="text-dark text-opacity-50 fw-semibold">Pack-5</div>
                            </div>
                        </div>
                        <!-- Price Tiers -->
                        <div class="row text-center ps-2">
                            <div class="col-3 col-lg-2 bg-white text-warning fw-bold p-1">
                                <div>Price</div>
                            </div>
                            <div class="col-3 col-lg-2 bg-white text-warning fw-bold p-1">
                                @{
                                    decimal basePrice = Model.DvdPrice;
                                    int quantity = 2;

                                    decimal totalPrice = basePrice * quantity * (1 - 0.08m);
                                    string formattedPrice = totalPrice.ToString("c");
                                }
                                <div>@formattedPrice</div>
                            </div>
                            <div class="col-3 col-lg-2 bg-white text-warning fw-bold p-1">
                                @{
                                    basePrice = Model.BlurayPrice;
                                    quantity = 2;
                                    totalPrice = basePrice * quantity * (1 - 0.06m);
                                    formattedPrice = totalPrice.ToString("c");
                                }
                                <div>@formattedPrice</div>
                            </div>
                            <div class="col-3 col-lg-2 bg-white text-warning fw-bold p-1">
                                @{
                                    basePrice = Model.DvdPrice;
                                    quantity = 5;
                                    totalPrice = basePrice * quantity * (1 - 0.1m);
                                    formattedPrice = totalPrice.ToString("c");
                                }
                                <div>@formattedPrice</div>
                            </div>
                        </div>
                        <!-- Description -->
                        <div class="row pl-2 my-3">
                            <p class="text-secondary lh-sm">@Html.Raw(Model.Description)</p>
                        </div>
                        <!-- Quantity Input -->
                        <div class="row pl-2 mb-3">
                            <div class="col-md-4">
                                <div class="input-group mb-3 d-flex align-items-center">
                                    <span class="input-group-text bg-primary text-white border-0 fw-semibold me-2 mr-3"
                                          id="inputGroup-sizing-default">
                                        Count
                                    </span>
                                    <input type="number" class="form-control text-end border-2"
                                           aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default" />
                                </div>
                            </div>
                        </div>
                        <!-- Add to Cart Button -->
                        <div class="row">
                            <div class="col-12 col-md-6 pb-1">
                                <button type="submit" disabled class="btn btn-primary bg-gradient  w-100 py-2 text-uppercase fw-semibold">
                                    Add to Cart (Coming Soon...)
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
</form>
