@{
    ViewData["Title"] = "About Us";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <h1 class="display-4">About CinemaSuite</h1>
            <p class="lead">Your ultimate destination for all things movies.</p>
            <hr class="my-4">
            <p>
                At CinemaSuite, we are passionate about bringing the magic of movies to you. Whether you are a fan of action, drama, comedy, or romance, we have something for everyone. Our extensive collection of movies ensures that you can find exactly what you're looking for.
            </p>
            <p>
                Our mission is to provide an unparalleled movie-watching experience with top-notch customer service. We believe in the power of storytelling and strive to create a community where movie lovers can come together and share their passion.
            </p>
            <a class="btn btn-primary btn-lg mt-3" href="/ContactUs" role="button">Contact Us</a>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-4 d-flex align-items-stretch">
            <div class="card">
                <img src="~/images/aboutus/mission.jpg" class="card-img-top" alt="Our Mission">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Our Mission</h5>
                    <p class="card-text">To deliver the best movie experience and create a community of movie enthusiasts.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 d-flex align-items-stretch">
            <div class="card">
                <img src="~/images/aboutus/vision.jpg" class="card-img-top" alt="Our Vision">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Our Vision</h5>
                    <p class="card-text">To be the leading platform for movie lovers, providing a vast collection of films and exceptional service.</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 d-flex align-items-stretch">
            <div class="card">
                <img src="~/images/aboutus/values.jpg" class="card-img-top" alt="Our Values" style="height:230px; object-fit:cover">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Our Values</h5>
                    <p class="card-text">Passion, Excellence, Community, and Innovation.</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4 justify-content-center mb-0">
        <div class="col-md-6 text-center">
            <h2 class="display-5">Meet Our Team</h2>
            <p class="lead">The dedicated team behind CinemaSuite.</p>
        </div>
    </div>

