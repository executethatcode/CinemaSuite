            <div class="card">
                <img src="~/images/aboutus/Saurabh.jpg" class="card-img-top" alt="Team Member 2" style="height:239px; object-fit:cover">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-text text-center">Saurabh Zambare</h5>
                    <p class="card-text text-center">Team Member 2</p>
                </div>
            </div>
        </div>
        <div class="col-md-2 d-flex align-items-stretch">
