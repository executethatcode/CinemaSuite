@model List<Movie>

<!DOCTYPE html>
<html>
<head>
    <title>Movie List Page</title>
</head>
<body>
    <partial name="_Notification" />
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-8">
                <h2 class="text-primary fw-bold mt-3 mb-3">Movie List</h2>
            </div>
            <div class="col-md-4 text-md-end">
                <a class="btn btn-primary btn-sm mt-3 mb-3" asp-controller="Movie" asp-action="Upsert">
                    <i class="bi bi-file-plus"></i> Add New Movie
                </a>
            </div>
        </div>
        <div class="table-responsive">
            <table id="tblData" class="table table-bordered table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th>Title</th>
                        <th>Release Date</th>
                        <th>Director</th>
                        <th>Genre</th>
                        <th>BluRay Price</th>
                        <th>Action</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</body>
</html>

@section Scripts {
    <script src="~/js/movie.js"></script>
}
